<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rigot.futscores.DetailsFragment">

    <!--TODO populate the team details-->

    <VideoView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/goalsButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:id="@+id/videoView" />

    <Button
        android:text="Goals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="232dp"
        android:id="@+id/goalsButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/alert_light_frame"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/goalsButton"
        android:layout_alignStart="@+id/goalsButton"
        android:layout_marginTop="14dp"
        android:id="@+id/imageView"
        android:layout_alignRight="@+id/goalsButton"
        android:layout_alignEnd="@+id/goalsButton" />
</RelativeLayout>
